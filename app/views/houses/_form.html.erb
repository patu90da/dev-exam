<%= form_for(house) do |f| %>
  <% if house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
      <% house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :rent %>
    <%= f.text_field :rent %><%= t('number.currency.format.unit') %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.text_field :age %><%= t('datetime.prompts.year') %>
  </div>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <hr/>

  <%= f.fields_for(:stations) do |s| %>
    <h2><%= Station.model_name.human %><%= s.index + 1 %></h2>

    <div class="field">
      <%= s.label :route_name %>
      <%= s.text_field :route_name %>
    </div>

    <div class="field">
      <%= s.label :name %>
      <%= s.text_field :name %>
    </div>

    <div class="field">
      <%= s.label :duration %>
      <%= s.text_field :duration %><%= t('datetime.prompts.minute') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
