<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @house.rent %>円
</p>

<p>
  <strong>Address:</strong>
  <%= @house.address %>
</p>

<p>
  <strong>Age:</strong>
  <%= @house.age %>年
</p>

<p>
  <strong>Note:</strong>
  <%= @house.note %>
</p>

<hr/>

<% @house.stations.each_with_index do |station, i| %>
  <h2><%= Station.model_name.human %><%= i + 1 %></h2>

  <p>
    <strong>Route name:</strong>
    <%= station.route_name %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= station.name %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= station.duration %>分
  </p>
<% end %>

